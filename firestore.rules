rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /fcm_tokens/{token} {
      allow read, write: if true;
    }

    match /missions/{missionId} {
      allow read, write: if true;
    }

    match /user_missions/{docId} {
      allow read, write: if true;
    }

    match /userMissions/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /posts/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /userProfiles/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /leaderboardDaily/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /leaderboardDaily/{docId}/entries/{entryId} {
      allow read: if true;
      allow write: if false;
    }

    match /leaderboardWeekly/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /leaderboardWeekly/{docId}/entries/{entryId} {
      allow read: if true;
      allow write: if false;
    }

    match /subscriptions/{docId} {
      allow read: if request.auth != null && request.auth.uid == docId;
      allow write: if false;
    }

    match /info_reveals/{docId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.viewerId;
      allow write: if false;
    }

    match /user_gifts/{docId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow write: if false;
    }

    match /gift_rate/{docId} {
      allow read: if false;
      allow write: if false;
    }

    match /reveal_rate/{docId} {
      allow read: if false;
      allow write: if false;
    }

    match /user_stamps/{docId} {
      allow read, write: if true;
    }

    match /slot_ledger/{docId} {
      allow read, write: if true;
    }

    match /user_notifications/{docId} {
      allow read, write: if true;
    }

    match /admin_settings/{docId} {
      allow read, write: if true;
    }

    match /admin_users/{docId} {
      allow read, write: if true;
    }

    match /mission_rejections/{docId} {
      allow read: if false;
      allow write: if false;
    }

    match /post_rejections/{docId} {
      allow read: if false;
      allow write: if false;
    }
  }
}
